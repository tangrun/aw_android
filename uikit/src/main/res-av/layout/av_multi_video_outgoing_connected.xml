<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/rootView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#858585"
        android:orientation="vertical">

    <LinearLayout
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/topActions"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/minimizeImageView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:src="@drawable/av_minimize"
                app:tint="@color/white"/>

        <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/addParticipantImageView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:src="@drawable/ic_baseline_add_24"
                android:tint="@color/white"/>

    </LinearLayout>


    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="w,1:1"
            app:layout_constraintTop_toBottomOf="@id/topActions"
            android:orientation="vertical"
            android:visibility="visible">

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_peer"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:spanCount="3"
                tools:itemCount="5"
                tools:listitem="@layout/av_multi_call_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        <FrameLayout
                android:id="@+id/focusVideoContainerFrameLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

    </FrameLayout>

    <TextView
            android:id="@+id/fullScreenDurationTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            tools:text="dddd"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/topActions"
            android:layout_alignParentBottom="true"
            android:visibility="visible"
            android:textColor="@color/white"/>

    <include
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/callControlActions"
            layout="@layout/av_multi_outgoing_connected_action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"/>
</androidx.constraintlayout.widget.ConstraintLayout>
